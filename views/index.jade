!!! 5
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')

    title= title
    meta(name='description', content='')
    meta(name='author', content='')

    meta(name='viewport', content='width=device-width,initial-scale=1')

    link(rel='stylesheet', href='css/app.css')

    script
      var HOST = '#{host}';
      var PORT = #{port};

    script(src='js/vendor.js')
    script(src='js/app.js')

    script
      require('application');

    #container
      header
      #main(role='main')
        table#map
          - for (var y = 0; y < map.mapsize; y++)
            tr
              - for (var x = 0; x < map.mapsize; x++)
                - var squareId = 'square-'+x+'x'+y
                  td(
                    id = squareId,
                    data-zone = map.squares[x][y].zone,
                    data-density = map.squares[x][y].density
                  )
        dl#stats
          dt Age
          dd#age= map.age

          dt Residents
          dd#residents= map.residents

          dt Jobs: Commercial
          dd#jobs-commercial= map.jobs.commercial

          dt Jobs: Industrial
          dd#jobs-industrial= map.jobs.industrial

          dt Residential Demand
          dd#demand-residential= map.demand.residential
          dt Commercial Demand
          dd#demand-commercial= map.demand.commercial
          dt Industrial Demand
          dd#demand-industrial= map.demand.industrial


      footer


